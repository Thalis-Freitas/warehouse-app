<h1>Novo Galpão</h1>

<% if @warehouse.errors.any? %>
  <p>Verifique os erros abaixo: </p>
  <ul>
    <% @warehouse.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @warehouse do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :code %>
    <%= f.text_field :code, title: 'usar maiúsculas "XXX" ' %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :cep %>
    <%= f.text_field :cep, title: 'usar o hífen "00000-000" ' %>
  </div>
  <div>
    <%= f.label :area %>
    <%= f.number_field :area%>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>