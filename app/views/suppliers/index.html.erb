<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th><%= Supplier.human_attribute_name(:name) %></th>
        <th> Localização </th>  
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |s| %>
      <tr>
        <td><%= link_to s.brand_name, s %></td>
        <td><%= s.city %> - <%= s.state %></td>  
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados</p>
<% end %>

<%= link_to 'Cadastrar novo fornecedor', new_supplier_path %>
