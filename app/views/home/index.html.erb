<section id="warehouses">
  <h2>Galpões</h2>
  <div>
  <%= link_to 'Cadastrar Galpão', new_warehouse_path %>
  </div>

  <% if @warehouses.any? %>
    <div>
      <% @warehouses.each do |w| %>
        <h3><%= link_to w.name, warehouse_path(w) %></h3>
        <dl>
          <dt>Código: </dt><dd><%= w.code %></dd>
          <dt>Cidade: </dt><dd><%= w.city %></dd>
          <dt>Área: </dt><dd><%= "#{w.area} m²" %></dd>
        </dl>
      <% end %>
    </div>
<% else %>
  <p>Não existem galpões cadastrados</p>
<% end %>
</section>